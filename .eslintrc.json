{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 1,
        "comma-dangle": 0,
        "no-param-reassign": 0,
        "arrow-body-style": 0,
        "no-restricted-syntax": 0,
        "class-methods-use-this": 0,
        "no-underscore-dangle": 0,
        "max-len": [
            "error",
            {
                "ignoreUrls": true,
                "code": 120
            }
        ]
    }
}